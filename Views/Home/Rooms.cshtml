@{
    Layout = "_Layout";
    ViewData["Title"] = "Quản lý phòng";
}

<div class="page-header">
    <h1><i class="fas fa-bed"></i> Quản lý phòng</h1>
    <button class="btn btn-primary" onclick="openAddRoomModal()">
        <i class="fas fa-plus"></i> Thêm phòng
    </button>
</div>

<!-- Filter Bar -->
<div class="filter-bar">
    <div class="filter-group">
        <label>Trạng thái:</label>
        <select id="statusFilter" onchange="filterRooms()">
            <option value="">Tất cả</option>
            <option value="0">Trống</option>
            <option value="1">Đang sử dụng</option>
            <option value="2">Bảo trì</option>
            <option value="3">Đã đặt</option>
        </select>
    </div>
    <div class="filter-group">
        <label>Loại phòng:</label>
        <select id="typeFilter" onchange="filterRooms()">
            <option value="">Tất cả</option>
            <option value="0">Phòng đơn</option>
            <option value="1">Phòng đôi</option>
            <option value="2">Suite</option>
            <option value="3">Deluxe</option>
            <option value="4">Presidential</option>
        </select>
    </div>
    <div class="filter-group">
        <label>Tầng:</label>
        <select id="floorFilter" onchange="filterRooms()">
            <option value="">Tất cả</option>
            <option value="1">Tầng 1</option>
            <option value="2">Tầng 2</option>
            <option value="3">Tầng 3</option>
        </select>
    </div>
</div>

<!-- Rooms Grid -->
<div class="rooms-grid" id="roomsGrid">
    <div class="loading-spinner">
        <i class="fas fa-spinner fa-spin"></i>
        <p>Đang tải...</p>
    </div>
</div>

<!-- Add/Edit Room Modal -->
<div id="roomModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h2 id="modalTitle">Thêm phòng mới</h2>
            <button class="modal-close" onclick="closeRoomModal()">&times;</button>
        </div>
        <div class="modal-body">
            <form id="roomForm">
                <input type="hidden" id="roomId">
                <div class="form-row">
                    <div class="form-group">
                        <label>Số phòng <span class="required">*</span></label>
                        <input type="text" id="roomNumber" required>
                    </div>
                    <div class="form-group">
                        <label>Loại phòng <span class="required">*</span></label>
                        <select id="roomType" required>
                            <option value="0">Phòng đơn</option>
                            <option value="1">Phòng đôi</option>
                            <option value="2">Suite</option>
                            <option value="3">Deluxe</option>
                            <option value="4">Presidential</option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label>Giá/đêm (VNĐ) <span class="required">*</span></label>
                        <input type="number" id="pricePerNight" required min="0">
                    </div>
                    <div class="form-group">
                        <label>Tầng <span class="required">*</span></label>
                        <input type="number" id="floor" required min="1">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label>Sức chứa <span class="required">*</span></label>
                        <input type="number" id="maxOccupancy" required min="1">
                    </div>
                    <div class="form-group">
                        <label>Trạng thái</label>
                        <select id="roomStatus">
                            <option value="0">Trống</option>
                            <option value="1">Đang sử dụng</option>
                            <option value="2">Bảo trì</option>
                            <option value="3">Đã đặt</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label>Mô tả</label>
                    <textarea id="description" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label>Tiện nghi (phân cách bằng dấu phẩy)</label>
                    <input type="text" id="amenities" placeholder="WiFi, TV, Điều hòa...">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeRoomModal()">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/rooms.js"></script>
}
