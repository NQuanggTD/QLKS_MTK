@{
    ViewData["Title"] = "Về Wangg's Hotel";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Về Wangg's Hotel</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1a2f4a 0%, #2c3e50 100%);
            min-height: 100vh;
            color: #333;
        }

        .hero-section {
            background: linear-gradient(rgba(26, 47, 74, 0.9), rgba(26, 47, 74, 0.9)), 
                        url('https://images.unsplash.com/photo-1566073771259-6a8506099945?w=1920') center/cover;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
            position: relative;
        }

        .hero-content {
            max-width: 800px;
            padding: 40px;
            animation: fadeInUp 1s ease-out;
        }

        .logo-large {
            font-size: 80px;
            color: #d4af37;
            margin-bottom: 20px;
            animation: bounce 2s infinite;
        }

        .hero-title {
            font-size: 56px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #d4af37;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .hero-subtitle {
            font-size: 24px;
            margin-bottom: 30px;
            opacity: 0.9;
        }

        .hero-description {
            font-size: 18px;
            line-height: 1.8;
            margin-bottom: 40px;
        }

        .btn-group {
            display: flex;
            gap: 20px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn {
            padding: 15px 40px;
            font-size: 18px;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: linear-gradient(135deg, #d4af37, #f4e04d);
            color: #1a2f4a;
            font-weight: bold;
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(212, 175, 55, 0.4);
        }

        .btn-secondary {
            background: transparent;
            color: white;
            border: 2px solid white;
        }

        .btn-secondary:hover {
            background: white;
            color: #1a2f4a;
            transform: translateY(-3px);
        }

        .info-section {
            padding: 80px 20px;
            background: white;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .section-title {
            text-align: center;
            font-size: 42px;
            color: #1a2f4a;
            margin-bottom: 50px;
            position: relative;
            padding-bottom: 20px;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: linear-gradient(90deg, #d4af37, #f4e04d);
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 40px;
            margin-bottom: 60px;
        }

        .feature-card {
            text-align: center;
            padding: 40px 30px;
            border-radius: 15px;
            background: #f8f9fa;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
        }

        .feature-icon {
            font-size: 50px;
            color: #d4af37;
            margin-bottom: 20px;
        }

        .feature-title {
            font-size: 24px;
            color: #1a2f4a;
            margin-bottom: 15px;
            font-weight: bold;
        }

        .feature-description {
            font-size: 16px;
            color: #666;
            line-height: 1.6;
        }

        .stats-section {
            padding: 80px 20px;
            background: linear-gradient(135deg, #1a2f4a 0%, #2c3e50 100%);
            color: white;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 40px;
            text-align: center;
        }

        .stat-card {
            padding: 30px;
        }

        .stat-number {
            font-size: 48px;
            font-weight: bold;
            color: #d4af37;
            margin-bottom: 10px;
        }

        .stat-label {
            font-size: 18px;
            opacity: 0.9;
        }

        .contact-section {
            padding: 80px 20px;
            background: #f8f9fa;
        }

        .contact-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 40px;
        }

        .contact-card {
            text-align: center;
            padding: 30px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .contact-icon {
            font-size: 40px;
            color: #d4af37;
            margin-bottom: 20px;
        }

        .contact-title {
            font-size: 20px;
            color: #1a2f4a;
            margin-bottom: 10px;
            font-weight: bold;
        }

        .contact-info {
            font-size: 16px;
            color: #666;
        }

        .footer {
            background: #1a2f4a;
            color: white;
            text-align: center;
            padding: 40px 20px;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
        }

        .social-links {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 20px;
        }

        .social-link {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: rgba(212, 175, 55, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #d4af37;
            font-size: 24px;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .social-link:hover {
            background: #d4af37;
            color: #1a2f4a;
            transform: translateY(-5px);
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-20px); }
        }

        .scroll-indicator {
            position: absolute;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            animation: bounce 2s infinite;
        }

        .scroll-arrow {
            font-size: 30px;
            color: #d4af37;
        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <div class="logo-large">
                <i class="fas fa-hotel"></i>
            </div>
            <h1 class="hero-title">Wangg's Hotel</h1>
            <p class="hero-subtitle">Nơi sang trọng gặp gỡ sự thoải mái</p>
            <p class="hero-description">
                Chào mừng đến với Wangg's Hotel - điểm đến hoàn hảo cho những trải nghiệm nghỉ dưỡng đẳng cấp. 
                Với hệ thống quản lý hiện đại và dịch vụ chuyên nghiệp, chúng tôi cam kết mang đến cho bạn 
                những khoảnh khắc tuyệt vời nhất.
            </p>
            <div class="btn-group">
                <a href="/Home/Login" class="btn btn-primary">
                    <i class="fas fa-sign-in-alt"></i> Đăng nhập hệ thống
                </a>
                <a href="#features" class="btn btn-secondary">
                    <i class="fas fa-info-circle"></i> Tìm hiểu thêm
                </a>
            </div>
        </div>
        <div class="scroll-indicator">
            <i class="fas fa-chevron-down scroll-arrow"></i>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="info-section">
        <div class="container">
            <h2 class="section-title">Tính Năng Nổi Bật</h2>
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h3 class="feature-title">Dashboard Thông Minh</h3>
                    <p class="feature-description">
                        Theo dõi toàn bộ hoạt động khách sạn với dashboard trực quan, 
                        cập nhật dữ liệu realtime và báo cáo chi tiết.
                    </p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-bed"></i>
                    </div>
                    <h3 class="feature-title">Quản Lý Phòng</h3>
                    <p class="feature-description">
                        Quản lý phòng dễ dàng với trạng thái realtime, 
                        phân loại theo loại phòng và giá cả linh hoạt.
                    </p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <h3 class="feature-title">Đặt Phòng Online</h3>
                    <p class="feature-description">
                        Hệ thống đặt phòng trực tuyến nhanh chóng, 
                        tự động kiểm tra phòng trống và xác nhận ngay lập tức.
                    </p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3 class="feature-title">Quản Lý Khách Hàng</h3>
                    <p class="feature-description">
                        Lưu trữ thông tin khách hàng an toàn, 
                        lịch sử đặt phòng và chương trình khách hàng thân thiết.
                    </p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-concierge-bell"></i>
                    </div>
                    <h3 class="feature-title">Dịch Vụ Cao Cấp</h3>
                    <p class="feature-description">
                        Quản lý các dịch vụ bổ sung như spa, nhà hàng, 
                        đưa đón sân bay với hệ thống decorator patterns.
                    </p>
                </div>

                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3 class="feature-title">Bảo Mật Cao</h3>
                    <p class="feature-description">
                        Mã hóa dữ liệu PBKDF2+SHA256, xác thực 2 yếu tố, 
                        và lịch sử hoạt động chi tiết.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section">
        <div class="container">
            <h2 class="section-title" style="color: white;">Thành Tựu</h2>
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-number">100+</div>
                    <div class="stat-label">Phòng Cao Cấp</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">5000+</div>
                    <div class="stat-label">Khách Hàng Hài Lòng</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">50+</div>
                    <div class="stat-label">Nhân Viên Chuyên Nghiệp</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number">24/7</div>
                    <div class="stat-label">Hỗ Trợ Khách Hàng</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="contact-section">
        <div class="container">
            <h2 class="section-title">Liên Hệ</h2>
            <div class="contact-grid">
                <div class="contact-card">
                    <div class="contact-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <h3 class="contact-title">Địa Chỉ</h3>
                    <p class="contact-info">
                        123 Đường Lê Lợi, Phường Xuân Hương<br>
                        Thành phố Đà Lạt-Lâm Đồng, Việt Nam
                    </p>
                </div>

                <div class="contact-card">
                    <div class="contact-icon">
                        <i class="fas fa-phone"></i>
                    </div>
                    <h3 class="contact-title">Điện Thoại</h3>
                    <p class="contact-info">
                        Hotline: 1900 1234<br>
                        Mobile: 0123 456 789
                    </p>
                </div>

                <div class="contact-card">
                    <div class="contact-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <h3 class="contact-title">Email</h3>
                    <p class="contact-info">
                        info@@hotelwangg.com<br>
                        booking@@hotelwangg.com
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="social-links">
                <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
                <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                <a href="#" class="social-link"><i class="fab fa-linkedin-in"></i></a>
            </div>
            <p>&copy; 2025 Wangg's Hotel. All rights reserved.</p>
            <p style="margin-top: 10px; opacity: 0.8;">
                Hệ thống quản lý khách sạn hiện đại với công nghệ ASP.NET Core 8.0
            </p>
        </div>
    </footer>

    <script>
        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });

        // Animate on scroll
        const observerOptions = {
            threshold: 0.1
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.animation = 'fadeInUp 0.8s ease-out';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.feature-card, .stat-card, .contact-card').forEach(el => {
            observer.observe(el);
        });
    </script>
</body>
</html>
