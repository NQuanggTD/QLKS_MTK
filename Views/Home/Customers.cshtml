@{
    Layout = "_Layout";
    ViewData["Title"] = "Quản lý khách hàng";
}

<div class="page-header">
    <h1><i class="fas fa-users"></i> Quản lý khách hàng</h1>
    <button class="btn btn-primary" onclick="openAddCustomerModal()">
        <i class="fas fa-plus"></i> Thêm khách hàng
    </button>
</div>

<!-- Search Bar -->
<div class="search-bar-large">
    <i class="fas fa-search"></i>
    <input type="text" id="customerSearch" placeholder="Tìm kiếm theo tên, email, số điện thoại, CMND..." onkeyup="searchCustomers()">
</div>

<!-- Customers Table -->
<div class="dashboard-card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>CMND/CCCD</th>
                        <th>Quốc tịch</th>
                        <th>VIP</th>
                        <th>Ghi chú</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody id="customersTable">
                    <tr>
                        <td colspan="8" class="text-center">Đang tải...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add/Edit Customer Modal -->
<div id="customerModal" class="modal">
    <div class="modal-content modal-large">
        <div class="modal-header">
            <h2 id="customerModalTitle">Thêm khách hàng mới</h2>
            <button class="modal-close" onclick="closeCustomerModal()">&times;</button>
        </div>
        <div class="modal-body">
            <form id="customerForm">
                <input type="hidden" id="customerId">
                <div class="form-row">
                    <div class="form-group">
                        <label>Họ và tên <span class="required">*</span></label>
                        <input type="text" id="fullName" required>
                    </div>
                    <div class="form-group">
                        <label>Ngày sinh <span class="required">*</span></label>
                        <input type="date" id="dateOfBirth" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label>Email <span class="required">*</span></label>
                        <input type="email" id="email" required>
                    </div>
                    <div class="form-group">
                        <label>Số điện thoại <span class="required">*</span></label>
                        <input type="tel" id="phoneNumber" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label>CMND/CCCD <span class="required">*</span></label>
                        <input type="text" id="identityNumber" required>
                    </div>
                    <div class="form-group">
                        <label>Quốc tịch <span class="required">*</span></label>
                        <input type="text" id="nationality" required value="Việt Nam">
                    </div>
                </div>
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <input type="text" id="address">
                </div>
                <div class="form-group">
                    <label>Ghi chú đặc biệt</label>
                    <textarea id="specialNotes" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label class="checkbox-label">
                        <input type="checkbox" id="isVIP">
                        Khách hàng VIP
                    </label>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeCustomerModal()">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- View Customer Details Modal -->
<div id="customerDetailsModal" class="modal">
    <div class="modal-content modal-large">
        <div class="modal-header">
            <h2>Thông tin khách hàng</h2>
            <button class="modal-close" onclick="closeCustomerDetailsModal()">&times;</button>
        </div>
        <div class="modal-body" id="customerDetailsContent">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/customers.js"></script>
}
